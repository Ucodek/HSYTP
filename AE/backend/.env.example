# Application Settings
APP_NAME=Financial Data API
APP_DESCRIPTION=API for financial data and portfolio analysis
APP_VERSION=0.1.0

# API Settings
API_V1_STR=/api/v1

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Use external connection URLs instead of local connections
# These should be obtained from your cloud service dashboard
DATABASE_URL=
REDIS_URL=

# Keep these for fallback (but they won't be used if the URLs above are set)
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=financial_data

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Security
SECRET_KEY=YourSuperSecretKeyForJWTTokenCreationChangeThisInProduction
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
RATE_LIMIT_BASIC=100
RATE_LIMIT_PREMIUM=500

# Cache TTLs (in seconds)
CACHE_TTL_DEFAULT=300
CACHE_TTL_INSTRUMENTS=3600

