# Application
PROJECT_NAME="HSYTP API"
PROJECT_DESCRIPTION="High-performance API for financial data and AI models"
VERSION="1.0.0"
ENVIRONMENT="development"  # development, production, testing
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Security
SECRET_KEY="your-secret-key-at-least-32-characters-long"
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 8 days

# Database
POSTGRES_SERVER="localhost"
POSTGRES_PORT=5432
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="postgres"
POSTGRES_DB="hsytp"

# Redis
REDIS_HOST="localhost"
REDIS_PORT=6379

# CORS
CORS_ORIGINS='["http://localhost:3000", "https://frontend.example.com"]'

# Observability
ENABLE_METRICS=true
ENABLE_TRACING=false
OTLP_ENDPOINT="http://jaeger:4317"  # OpenTelemetry collector endpoint
